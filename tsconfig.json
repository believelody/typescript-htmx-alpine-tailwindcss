{
	"compilerOptions": {
		"module": "CommonJS",
		"declaration": true,
		// "removeComments": true,
		"target": "ES2017",
		// "typeRoots": ["./@types", "./node_modules/@types"],
		"esModuleInterop": true,
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"rootDir": ".",
		"incremental": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"paths": {
			"@middlewares*": ["src/middlewares/*"],
			"@helpers*": ["src/helpers/*"],
			"@routes*": ["src/routes/*"],
			"@services*": ["src/services/*"],
			"@interfaces*": ["src/interfaces/*"],
			"@enum*": ["src/enum/*"],
			"@utils*": ["src/utils/*"],
		}
	}
}
