{
	"compilerOptions": {
		"module": "CommonJS",
		"declaration": true,
		// "removeComments": true,
		"target": "ES2017",
		// "typeRoots": ["./@types", "./node_modules/@types"],
		"esModuleInterop": true,
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"rootDir": ".",
		"incremental": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"paths": {
			"@configs/*": ["src/configs/*"],
			"@middlewares/*": ["src/middlewares/*"],
			"@helpers/*": ["src/helpers/*"],
			"@controllers/*": ["src/controllers/*"],
			"@services/*": ["src/services/*"],
			"@interfaces/*": ["src/interfaces/*"],
			"@enums/*": ["src/enums/*"],
			"@utils/*": ["src/utils/*"],
		}
	}
}
