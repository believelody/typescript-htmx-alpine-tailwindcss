{{!< main }}
{{#> element/page breadcrumbs=(toArray (object url="/products" label="Products") (object label=product.title)) }}
  <div class="flex items-center justify-between my-4">
    {{> link/prev-next prev=(object url=product.url.prev label="Previous product") next=(object url=product.url.next label="Next product")}}
  </div>
  <div class="flex flex-col max-w-lg px-5 py-12 mx-auto lg:flex-row lg:max-w-none lg:w-4/5 gap-y-4 lg:gap-y-0 md:gap-x-4">
      {{> image/carousel class="w-full h-auto rounded max-h-[32rem] lg:w-1/2 xl:w-2/3" images=product.images }}
      {{> product/info }}
  </div>
{{/element/page}}