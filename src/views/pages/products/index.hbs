{{!< main }}
{{> element/seo }}
<section class="grid grid-cols-1 text-gray-600 lg:grid-cols-4 body-font">
  <div class="flex flex-col px-2 py-12 mx-auto lg:col-span-3 gap-y-4">
    <div class="flex items-center justify-start gap-x-4">
      {{> limit/default
            group=(toArray 6 18 30)
            href=(urlFromParams (chain (baseUrl) "/products"))
            meta=meta
      }}
    </div>
    <ul class="grid h-full gap-3 sm:grid-cols-2 lg:grid-cols-3" id="product-list">
      {{> product/list }}
    </ul>
    {{> product/action }}
  </div>
  <div class="hidden lg:block">
    {{> product/filters }}
  </div>
</section>