{{!< main }}
{{> element/seo }}
<section class="text-gray-600 body-font" id="container">
  <div class="container mx-auto flex flex-col gap-y-4 px-2 py-12">
    <div class="flex items-center justify-start gap-x-4">
      {{> limit/default
            group=(toArray 6 18 30)
            href=(urlFromParams (chain (baseUrl) "/products"))
            meta=meta
      }}
    </div>
    <ul class="grid gap-3 sm:grid-cols-2 lg:grid-cols-3 h-full" id="product-list">
      {{> product/list }}
    </ul>
    {{> product/action }}
  </div>
</section>