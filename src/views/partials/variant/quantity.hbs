<div class="flex items-center gap-x-4">
  {{#if label}}
    <span>{{ label }}</span>
  {{/if}}
  <div x-data="{ quantity: {{withDefault value min }} }" class="flex items-center gap-x-2">
    {{> button/simple (object type='button' class='p-2 bg-white border rounded border-secondary disabled:bg-gray-100 disabled:border-none disabled:cursor-not-allowed'
        :disabled=(chain "quantity === " (numberIntoString min))
        x-on:click="quantity -= 1"
        icon=(object component=(partial 'icon/minus') class='text-secondary')) }}
    <input class="w-12 text-center input out-of-range:bg-danger-500" type="number" min="{{ min }}" max="{{ max }}"
        x-model="quantity" name="quantity" pattern="/\d/g" />
    {{> button/simple (object type='button' class='p-2 bg-white border rounded border-secondary disabled:bg-gray-100 disabled:border-none disabled:cursor-not-allowed'
        :disabled=(chain "quantity === " (numberIntoString max))
        x-on:click="quantity += 1"
        icon=(object component=(partial 'icon/plus') class='text-secondary')) }}
  </div>
</div>