<button
    {{#unless bind }}
        {{#if type }}
            type="{{ type }}"
        {{/if }}
    {{/unless}}
    {{#if click }}@click="{{ click }}"{{/if}}
    {{#if bind }}x-bind="{{ bind }}"{{/if}}
    {{#if data-loading-aria-busy}}data-loading-aria-busy{{/if}}
    {{#if data-loading-disable}}data-loading-disable{{/if}}
    class="{{withDefault class 'relative px-4 py-2 rounded btn'}} {{#if color}}{{cond outlined (append 'btn-' color '-outlined') (append 'btn-' color)}}{{else}}{{cond outlined 'btn-outlined' ''}}{{/if}} {{#if block}}w-full{{/if}}"
>
    {{#if data-loading-text}}
        <span id="loading-text"
            data-loading
        >
            {{ data-loading-text }}
        </span>
    {{/if}}
    {{#if label}}
        <span {{#if data-loading-text}}data-loading-class="hidden"{{/if}}>{{ label }}</span>
    {{/if}}
    {{#if data-loading-icon}}
        <span id="loading-icon"
            data-loading
        >
            {{partial (toString data-loading-icon) }}
        </span>
    {{/if}}
    {{#if icon}}
        <span class="{{ icon.class}}" {{#if data-loading-icon}}data-loading-class="hidden"{{/if}}>{{ icon.component }}</span>
    {{/if}}
    {{#if sr-only}}
        <span class="sr-only">{{ sr-only }}</span>
    {{/if}}
    {{#if image}}
        <span {{#if (or data-loading-text data-loading-icon)}}data-loading-class="hidden"{{/if}}>{{ image }}</span>
    {{/if}}
</button>