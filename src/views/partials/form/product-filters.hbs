<form class="relative flex flex-col items-center justify-center w-full p-4 gap-y-4 lg:p-2">
  {{#if title}}
    <h2 class="text-center">{{ title }}</h2>
  {{/if}}
  <div class="flex flex-col items-start justify-start w-full gap-y-4 grow">
    <div hx-get="/products/categories" hx-trigger="load" class="w-full"></div>
    <div hx-get="/products/brands" hx-trigger="load" class="w-full"></div>
  </div>
  <div class="relative bottom-0 flex flex-col justify-center w-full gap-y-2">
    {{> button/primary type="button" label="Apply filters" }}
    {{> button/simple type="button" label="Restore default parameters" }}
  </div>
</form>