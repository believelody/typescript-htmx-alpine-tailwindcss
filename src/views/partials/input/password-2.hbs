<div class="input flex items-center gap-x-2 {{#if color}}input-{{color}}{{/if}} {{#if transition}}color-transition{{/if}}">
    <input type="password" {{#if id}}id="{{ id }}" {{/if}} name="{{ name }}" {{#if required}}required{{/if}}
        placeholder="{{ placeholder }}"{{#if autocomplete}}autocomplete="{{ autocomplete }}" {{/if}}
        {{#if data-loading-disable}}data-loading-disable{{/if}} class="flex-1 px-1"
    >
    <button id="hide-icon-pwd" class="hidden" type="button" onclick="hidePassword('{{ id }}')" class="flex items-center justify-end w-18">
      {{> icon/eye-slash size=6 color="text-secondary" fill="none" stroke-width=1 }}
    </button>
    <button id="show-icon-pwd" type="button" onclick="showPassword('{{ id }}')" class="flex items-center justify-end w-18">
      {{> icon/eye size=6 fill="none" stroke-width=1 }}
    </button>
</div>
<script>
  function hidePassword(id) {
    const hideButton = document.getElementById("hide-icon-pwd");
    const showButton = document.getElementById("show-icon-pwd");
    const passwordInput = document.getElementById(id);
    passwordInput.type = "password";
    hideButton.classList.add("hidden");
    showButton.classList.remove("hidden");
  }
  function showPassword(id) {
    const showButton = document.getElementById("show-icon-pwd");
    const hideButton = document.getElementById("hide-icon-pwd");
    const passwordInput = document.getElementById(id);
    passwordInput.type = "text";
    showButton.classList.add("hidden");
    hideButton.classList.remove("hidden");
  }
</script>