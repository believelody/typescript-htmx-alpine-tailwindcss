<div x-data="{ show : false }" class="input flex {{#if color}}input-{{color}}{{/if}} {{#if transition}}color-transition{{/if}}">
    <input :type="show ? 'text' : 'password'" {{#if id}}id="{{ id }}" {{/if}} name="{{ name }}" {{#if required}}required{{/if}}
        placeholder="{{ placeholder }}" x-model="value" {{#if autocomplete}}autocomplete="{{ autocomplete }}" {{/if}}
        {{#if data-loading-disable}}data-loading-disable{{/if}}
    >
    <button type="button" @click="show = !show" class="w-full flex items-center justify-end">
      <div x-show="show">{{> icon/eye-slash size=6 color="text-secondary" fill="none" stroke-width=1 }}</div>
      <div x-show="!show">{{> icon/eye size=6 fill="none" stroke-width=1 }}</div>
    </button>
</div>