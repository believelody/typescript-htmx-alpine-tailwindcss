<nav class="grid justify-around grid-flow-col grid-rows-5 list-none" hx-boost="true">
  {{#each (sort categories) as |category|}}
    <li>
      <a href="/categories/{{ category }}" hx-push-url="true" hx-target="#content" hx-swap="innerHTML"
          hx-indicator="#loader, #content"
          class="text-lg text-gray-600 cursor-pointer hover:text-gray-800">{{ category }}</a>
    </li>
  {{/each}}
</nav>