                <li>
                    <a href="/guc" hx-indicator="#loader, #content" hx-target="#content" :class="currentRoute.startsWith('/guc') && 'border-b-2 border-gray-800'" class="text-gray-600 hover:text-gray-800">G.U.C</a>
                </li>
                <li>
                    <a href="/categories" hx-indicator="#loader, #content" hx-target="#content" :class="currentRoute.startsWith('/categories') && 'border-b-2 border-gray-800'" class="text-gray-600 hover:text-gray-800">Categories</a>
                </li>
                <li>
                    <a href="/brands" hx-indicator="#loader, #content" hx-target="#content" :class="currentRoute.startsWith('/brands') && 'border-b-2 border-gray-800'" class="text-gray-600 hover:text-gray-800">Brands</a>
                </li>
            </nav>
    </div>
    <div class="flex border-t border-gray-200 grow">
        <div class="container flex flex-wrap items-center px-2 py-4 mx-auto gap-y-4 lg:gap-y-0 lg:gap-x-4">
            <div
                class="flex flex-wrap items-center justify-center gap-y-2 md:gap-y-0 md:gap-x-2 md:flex-nowrap md:justify-start">
                {{#unless user.subscribed}}
                    {{> form/subscription }}
                {{/unless}}
                <p class="text-sm text-center text-gray-500 sm:text-left">
                    Bitters chicharrones fanny pack
                    <br class="hidden lg:block">
                    waistcoat green juice
                </p>
            </div>
            <div class="inline-flex justify-around flex-1 lg:justify-end lg:gap-x-4">
                {{> element/socials }}
            </div>
        </div>
    </div>
    <div class="relative bottom-0 bg-gray-100">
        <div class="container flex flex-col flex-wrap py-3 mx-auto sm:px-5 sm:flex-row">
            <p class="text-sm text-center text-gray-500 sm:text-left">© 2020 Tailblocks —
                <a href="https://twitter.com/knyttneve" class="ml-1 text-gray-600" target="_blank"
                    rel="noopener noreferrer">@knyttneve</a>
            </p>
            <span class="w-full mt-2 text-sm text-center text-gray-500 sm:ml-auto sm:mt-0 sm:w-auto sm:text-left">Enamel
                pin tousled raclette tacos irony</span>
        </div>
    </div>
