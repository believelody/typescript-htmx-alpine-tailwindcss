<div class="relative flex flex-col text-gray-600 border-2 border-gray-200 grow md:space-y-2 ">
    <div class="container p-4 mx-auto">
            <h2 class="mb-3 text-sm font-medium tracking-widest text-center text-gray-900 uppercase title-font">external links</h2>
            <nav hx-boost="true" class="flex flex-col items-center justify-center list-none md:flex-row md:justify-between">
                <li>
                    <a href="/about" hx-target="#content" :class="currentRoute.startsWith('/about') && 'border-b-2 border-gray-800'" class="text-gray-600 hover:text-gray-800">About</a>
                </li>
                <li>
                    <a href="/contact" hx-target="#content" :class="currentRoute.startsWith('/contact') && 'border-b-2 border-gray-800'" class="text-gray-600 hover:text-gray-800">Contact Us</a>
                </li>
                <li>
                    <a href="/faq" hx-indicator="#loader, #content" hx-target="#content" :class="currentRoute.startsWith('/faq') && 'border-b-2 border-gray-800'" class="text-gray-600 hover:text-gray-800">F.A.Q</a>
