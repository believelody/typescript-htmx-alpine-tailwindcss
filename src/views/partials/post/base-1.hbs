<div class="relative box-border h-full px-8 pt-16 pb-24 text-center rounded-lg shadow {{cond background '' 'bg-neutral-100'}}">
    {{#if background}}
        <img loading="lazy" class="absolute top-0 left-0 object-cover w-full h-full -z-10 opacity-20" src="{{ background }}" alt="{{ content }}" />
    {{/if}}
    {{#if tags}}
        {{> element/tags items=tags limit=2}}
    {{/if}}
    <h2 class="mb-3 font-medium text-neutral-900 title-font sm:text-2xl">{{ title }}</h2>
    {{#if withAuthor}}
        <div hx-get="/users/{{ userId }}/author-name" hx-push-url="false" hx-trigger="load" hx-swap="outerHTML"></div>
    {{/if}}
    <p class="mb-3 leading-relaxed"
        style="
            display: -webkit-box;
            max-width: auto;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        "
    >
        {{ content }}
    </p>
    {{> (append 'link/' (withDefault color 'default')) icon=(object component=(partial 'icon/arrow-right' fill="none")) label="Learn More" href=url }}
    {{#if extra }}
        {{> extra }}
    {{/if}}
</div>