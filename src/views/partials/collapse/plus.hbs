<div x-data="{ expanded: false }">
  <div @click="expanded = !expanded" class="flex items-start gap-x-4">
    <span class="items-start w-auto transition duration-500"
        :class="expanded ? 'rotate-[405deg]' : 'rotate-0'">{{> icon/plus }}</span>
    {{ summary }}
  </div>
  <div x-show="expanded" x-collapse.500ms>
    {{> @partial-block }}
  </div>
</div>