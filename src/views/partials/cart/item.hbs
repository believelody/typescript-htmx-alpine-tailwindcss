{{#let spread=this item-id-image=(chain "item-" (numberIntoString id) "-image")}}
  <li hx-boost="true" hx-get="/products/{{ id }}/image" hx-trigger="load" hx-target="#{{ item-id-image }}" class="flex border rounded h-[10rem]">
    <a id="{{ item-id-image }}" href="/products/{{ id }}" hx-target="#content" onclick="sidebar.close('{{ sidebar-id }}')" class="max-w-[6rem] hidden xs:block"></a>
    <div class="flex flex-col justify-between w-full p-2">
      <div class="flex items-center justify-between">
        {{> link/base class="text-md" onclick=(chain "sidebar.close('" sidebar-id "')") href=(chain "/products/" (numberIntoString id)) label=title }}
        {{> button/trash hx-delete=(chain "/cart/item/" (numberIntoString id)) hx-target="#sidebar-block" class="h-10 p-2 border rounded border-danger-500 text-danger-500" size=6 }}
      </div>
      <div class="flex items-center justify-between">
        <span>Quantity :</span>
        {{> cart/item-quantity product-id=id value=quantity min=1 max=5 }}
      </div>
      <div class="flex items-center justify-between">
        <span class="shrink-0">price: ${{ price }}</span>
        <span>total: ${{ total }}</span>
      </div>
    </div>
  </li>
{{/let}}