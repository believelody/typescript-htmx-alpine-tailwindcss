<div class="relative box-border h-full px-8 pt-16 pb-24 text-center rounded-lg shadow {{cond item.background '' 'bg-neutral-100'}}">
    {{#if item.background}}
        <img loading="lazy" class="absolute top-0 left-0 object-cover w-full h-full -z-10 opacity-20" src="{{ item.background }}" alt="{{ item.content }}" />
    {{/if}}
    {{#if subtitle}}
        <h5 class="mb-1 font-medium tracking-widest {{withDefault color 'text-neutral-700'}} title-font">{{ item.subtitle }}</h5>
    {{/if}}
    <h2 class="mb-3 font-medium text-neutral-900 title-font sm:text-2xl">{{ item.title }}</h2>
    <p class="mb-3 leading-relaxed"
        style="
            display: -webkit-box;
            max-width: auto;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        "
    >
        {{ item.content }}
    </p>
    {{> (append 'link/' (withDefault color 'default')) icon=(partial 'icon/arrow-right') label="Learn More" href=item.url }}
    {{#if footer }}
        {{> footer }}
    {{/if}}
</div>