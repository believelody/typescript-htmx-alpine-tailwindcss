{{#let spread=this notification-item-id=(chain "notification-item-id-" (uuid))}}
  <li id="{{ notification-item-id }}" x-data="notifier('{{ notification-item-id }}', '{{ data.type }}')"
      class="notification-item slide-to-left" x-effect="setTimer()">
    <div :class="`box-border p-2 rounded ${setBorderFromType()}`">
      <section class="flex items-start justify-between">
        <h4>
          <b>{{ data.title }}</b>
        </h4>
        {{> button/close x-bind='closer' }}
      </section>
      <p>{{ data.message }}</p>
    </div>
  </li>
{{/let}}